{
  "manifest_version": 2,

  "name": "Women in Tech",
  "description": "A project for the Women in Tech Demo Days Hackathon",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/mynetwork/*"],
      "js": ["clarifai.js", "d3.min.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://d3js.org/d3.v4.min.js; object-src 'self'"
}
